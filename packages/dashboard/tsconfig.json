{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2015",
      "es5",
      "es6",
      "ES2017"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": false
  },
  "exclude": [
    "./bin",
    "./dist",
    "**/src/*.ts*"
  ],
  "include": [
    "next-env.d.ts",
    "server.ts"
  ]
}
