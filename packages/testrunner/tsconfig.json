{
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "./dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": false,
		"noImplicitAny": true,
		"noImplicitThis": false,
		"jsx": "react",
		"lib": [
			"es2015",
			"es5",
			"es6",
			"dom"
		],
		"moduleResolution": "node",
		"module": "commonjs",
		"noEmit": false,
		"strict": true,
		"target": "es5",
		"strictNullChecks": true,
		"types": [
			"node",
			"@wdio/sync",
			"mocha"
		],
		"typeRoots": [
			"./src/types",
      		"./node_modules/@types"
		]
	},
	"exclude": [
		"node_modules/**/*",
		"**/*.js"
	]
}